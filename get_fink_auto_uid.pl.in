use Getopt::Long;

use strict;

my $config_file="@PREFIX@/etc/fink.conf";
use Fink::Config;
my $config = Fink::Config->new_with_path($config_file);
         
         
my ($automatic, $minval, $maxval);
my $options = GetOptions (
							"automatic" => \$automatic,
							"minval" => \$minval,
							"maxval" => \$maxval,
						);

die "None of --automatic, --minval, or --maxval was specified.\n" if !($automatic || $minval || $maxval);
die "Only of --automatic, --minval, or --maxval should be specified.\n" if (($automatic && $minval) || ($automatic && $maxval) || ($minval && $maxval));

print $config->param_boolean("AutoUid") if $automatic;
print $config->param("AutoUidMin") if $minval;
print $config->param("AutoUidMax") if $maxval;
print "\n";

